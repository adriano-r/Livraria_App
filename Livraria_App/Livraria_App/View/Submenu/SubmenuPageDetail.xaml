        <Button Text="Ver mais livros..." Clicked="VerMaisButton_Clicked" Padding="10" BackgroundColor="#007AFF" TextColor="White" FontSize="16" CornerRadius="5" HeightRequest="40" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="40,0,40,0" />

