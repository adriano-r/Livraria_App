<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Livraria_App.View.Submenu.SubmenuPageDetail"
             Title="Biblioteca">

    <StackLayout Padding="20" Spacing="10">
        <Image Source="{Binding Imagem}" Aspect="AspectFill" HeightRequest="300"></Image>
        <Label Text="{Binding Titulo}" FontSize="24" FontAttributes="Bold"></Label>
        <Label Text="{Binding Autor}" FontSize="18"></Label>
        <Label Text="{Binding Descricao}" FontSize="16"></Label>
        <Label Text="{Binding Quantidade}" FontSize="16"></Label>
        <Button Text="Reservar" Clicked="ReserveButton_Clicked"></Button>
        <Image Source="Book_Xamarin.png" Aspect="AspectFill" HeightRequest="300"></Image>
        <Label Text="Livro de Xamarin" FontSize="24" FontAttributes="Bold"></Label>
        <Label Text="Macrohard" FontSize="18"></Label>
        <Label Text="Livro feito com o intuito de leitura" FontSize="16"></Label>
        <Label Text="Disponivel: 15" FontSize="16"></Label>
        <Button Text="Ver detalhes" Clicked="ReserveButton_Clicked"></Button>
    </StackLayout>

</ContentPage>