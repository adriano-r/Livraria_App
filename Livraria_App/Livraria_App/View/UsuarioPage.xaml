<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Livraria_App.View.UsuarioPage">

    <StackLayout Padding="10">
        <Frame BackgroundColor="Transparent" Padding="24" CornerRadius="0">
            <Label Text="Usuarios" HorizontalTextAlignment="Center" TextColor="OrangeRed" FontSize="36"/>
        </Frame>


        <StackLayout Orientation="Horizontal">
            <Entry x:Name="entId" Keyboard="Numeric" Placeholder="Id"/>
            <Button x:Name="btLocalizar" Text="Localizar" Clicked="btLocalizar_Clicked" />
            <Button x:Name="btExcluir" Text="Excluir" Clicked="btExcluir_Clicked" />
        </StackLayout>

        <Entry Placeholder="Nome" x:Name="entNome" Keyboard="Text" />
        <Entry Placeholder="Sobrenome" x:Name="entSobre" Keyboard="Text"/>
        <Entry Placeholder="Email" x:Name="entEmail" Keyboard="Email"/>
        <Entry Placeholder="Avatar URL" x:Name="entAvt" Keyboard="Url" />
        <Button Text="Cadastrar" x:Name="btSalvar" Clicked="btSalvar_Clicked" />

    </StackLayout>
</ContentPage>